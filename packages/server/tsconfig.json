{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "noLib": false,
    "outDir": "./dist",
    "removeComments": true,
    "rootDirs": ["src", "./dist"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["./src/**/*", "./index.ts", "./test/**/*"],
  "exclude": ["node_modules", "./test/fixtures/**/*", "**/*.spec.ts"]
}
